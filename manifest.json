{
  "manifest_version": 3,
  "name": "LinkedIn AI Engagement Bot",
  "version": "1.0.0",
  "description": "Automate LinkedIn engagement with AI-generated comments",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["config.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn AI Engagement"
  },
  "icons": {
    "16": "icon16.svg",
    "32": "icon16.svg", 
    "48": "icon16.svg"
  }
}
