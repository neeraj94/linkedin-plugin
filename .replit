modules = ["nodejs-20", "web", "python-3.11"]
run = "node index.js"
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Extension Server"

[[workflows.workflow]]
name = "Extension Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000 --bind 0.0.0.0"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
run = ["sh", "-c", "node index.js"]
